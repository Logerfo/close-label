{
  "name": "close-label",
  "version": "0.0.2",
  "description": "A Probot app that applies a specific label to an issue closed through a pull request considering its current labels.",
  "author": "Bruno Logerfo <bruno@logerfo.tk> (https://github.com/Logerfo)",
  "license": "ISC",
  "repository": "https://github.com/close-label.git",
  "homepage": "https://github.com/close-label",
  "bugs": "https://github.com/close-label/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "label"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "nock": "^10.0.0",
    "@types/nock": "^9.3.0",
    "probot": "^7.2.0",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/node": "^11.9.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1",
    "ts-jest": "^24.0.0",
    "tslint": "5.16.0",
    "typescript": "^3.3.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
